<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="92dp" >

    <ImageView
        android:id="@+id/gender_image"
        android:layout_width="150dp"
        android:layout_height="92dp" />

    
     <ImageView
        android:id="@+id/cross_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cross"
        android:layout_toLeftOf="@+id/age_text" 
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="21dp" />

      <ImageView
        android:id="@+id/cross_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cross"
        android:layout_toRightOf="@+id/age_text"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
      
    <TextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/checked_image"
        android:layout_width="150dp"
        android:layout_height="92dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/number_check_icon" 
        />

</RelativeLayout>